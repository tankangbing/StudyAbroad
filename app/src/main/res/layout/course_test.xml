<?xml version="1.0" encoding="utf-8"?>
<!--  开始测试     -->
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<RelativeLayout
		android:id="@+id/test_ll_title"
		android:layout_width="fill_parent"
		android:layout_height="55dp"
		android:background="@color/colorPrimary"
		android:gravity="center_vertical" >

		<Button
			android:id="@+id/button1"
			android:layout_width="70dp"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_centerInParent="true"
			android:layout_marginLeft="16dp"
			android:background="@drawable/title_btn_back"
			android:onClick="ordertabBack"
			android:textColor="#fff"
			android:text="返回"
			style="@style/app_copyright" />

		<TextView
			android:id="@+id/msgbartitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:gravity="center"
			android:textAppearance="?android:attr/textAppearanceLarge"
			style="@style/app_tar" />

		<Button
			android:id="@+id/submitBtn"
			android:layout_width="70dp"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerInParent="true"
			android:layout_marginRight="16dp"
			android:padding="3dp"
			android:background="#dc8d4c"
			android:onClick="ordertabBack"
			android:textColor="#fff"
			android:text="一键提交"
			style="@style/app_copyright" />
	</RelativeLayout>
	<android.support.v4.view.ViewPager
		android:id="@+id/readerViewPager"
		android:background="#fff"
		android:layout_below="@id/test_ll_title"
		android:layout_marginBottom="50dp"
		android:layout_width="match_parent"
		android:layout_height="fill_parent">
	</android.support.v4.view.ViewPager>
	<LinearLayout
		android:id="@+id/test_sl_ll"
		android:gravity="bottom"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true">
		<com.app.studyabroad.util.WrappingSlidingDrawer
			android:id="@+id/sliding"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:content="@+id/allApps"
			android:handle="@+id/test_rl_bottom"
			android:orientation="vertical" >

			<RelativeLayout
				android:id="@+id/allApps"
				android:layout_gravity="start"
				android:orientation="vertical"
				android:layout_width="300dp"
				android:layout_height="450dp">
				<ScrollView
					android:layout_width="match_parent"
					android:layout_height="450dp"
					android:background="#fff"
					android:scrollbars="vertical" >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
						   android:padding="10dp"
						   android:layout_marginBottom="10dp">
                           <TextView
							   android:id="@+id/tv1"
                               android:layout_width="15dp"
                               android:layout_height="15dp"
                               android:background="#c9c9c9"
							   android:layout_centerVertical="true"/>
                           <TextView
							   android:id="@+id/tv2"
							   android:layout_marginLeft="5dp"
							   android:layout_toRightOf="@+id/tv1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="未做"
							   android:textSize="14dp"
                               android:textColor="#333333"
							   android:layout_centerVertical="true"/>
                           <TextView
							   android:id="@+id/tv3"
							   android:layout_marginLeft="10dp"
							   android:layout_toRightOf="@+id/tv2"
                               android:layout_width="15dp"
                               android:layout_height="15dp"
                               android:background="#efda25"
							   android:layout_centerVertical="true"/>
                           <TextView
							   android:id="@+id/tv4"
							   android:layout_marginLeft="5dp"
							   android:layout_toRightOf="@+id/tv3"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="已保存"
							   android:textSize="14dp"
                               android:textColor="#333333"
							   android:layout_centerVertical="true"/>
                           <TextView
							   android:id="@+id/tv5"
							   android:layout_toRightOf="@+id/tv4"
                               android:layout_width="15dp"
                               android:layout_height="15dp"
                               android:background="#4a8fde"
							   android:layout_marginLeft="10dp"
							   android:layout_marginRight="5dp"
							   android:layout_centerVertical="true"/>
                           <TextView
							   android:id="@+id/tv6"
							   android:layout_toRightOf="@+id/tv5"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="已提交"
							   android:textSize="14dp"
                               android:textColor="#333333"
							   android:layout_centerVertical="true"/>
                       </RelativeLayout>
                       <TableLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="#fff"
                           android:id="@+id/test_ll"
						   android:stretchColumns="*"
                           android:orientation="vertical" >
                       </TableLayout>
                   </LinearLayout>

				</ScrollView>

			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/test_rl_bottom"
				android:background="#fff"
				android:layout_alignParentBottom="true"
				android:layout_width="fill_parent"
				android:layout_height="50dp">
				<TextView
					android:id="@+id/test_sd_bor"
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="#bab8b8"/>

				<TextView
					android:paddingLeft="20dp"
					android:text=""
					android:id="@+id/test_sd_tx"
					android:textSize="15sp"
					android:gravity="center"
					android:layout_toLeftOf="@+id/test_btn_exerciseCard"
					android:textColor="@color/colorPrimary"
					android:layout_width="wrap_content"
					android:layout_height="match_parent" />
				<TextView
					android:layout_alignParentRight="true"
					android:drawableLeft="@drawable/exe"
					android:id="@+id/test_btn_exerciseCard"
					android:textSize="15sp"
					android:gravity="center"
					android:paddingRight="20dp"
					android:paddingLeft="20dp"
					android:textColor="#000"
					android:layout_width="wrap_content"
					android:layout_height="match_parent" />
			</RelativeLayout>
		</com.app.studyabroad.util.WrappingSlidingDrawer>
	</LinearLayout>
</RelativeLayout>
