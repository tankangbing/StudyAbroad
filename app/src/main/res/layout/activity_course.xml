<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <FrameLayout
        android:id="@+id/course_fl"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/course_rl"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/course_tv"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/divider_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/course_tv"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_tab"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_home0"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/home_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="首页"
                    style="@style/small_textSize"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/my_index_tab"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/my_index_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_info1"
                    android:background="@color/transparent"/>
                <TextView
                    android:id="@+id/my_index_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="信息"
                    style="@style/small_textSize"
                    android:textColor="@color/color_999999"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <ListView android:id="@+id/check_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#ccc"
        android:background="@android:color/white"
        android:dividerHeight="1dip"
        android:layout_marginTop="2dp"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:visibility="gone"
        />
</LinearLayout>
