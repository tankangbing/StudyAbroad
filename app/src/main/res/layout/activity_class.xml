<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

	<RelativeLayout
    	    android:layout_width="fill_parent"
    	    android:layout_height="55dp"
    	    android:background="@color/colorPrimary"
    	    android:gravity="center_vertical" >


		<Button
			android:id="@+id/button2"
			android:onClick="ordertabBack"
			android:text="返回"
			style="@style/back_btn" />
		<Button
			android:id="@+id/button1"
			android:onClick="ordertabBack"
			style="@style/app_button" />
    	    <TextView
    	        android:id="@+id/msgbartitle"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_centerHorizontal="true"
    	        android:layout_centerVertical="true"
    	        android:gravity="center"
    	        android:textAppearance="?android:attr/textAppearanceLarge"
    	        style="@style/app_tar" />

    	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:background="@color/colorCheck_item"
		>
	    <ImageView
			android:id="@+id/class_week_pre"
			android:clickable="true"
		    android:layout_width="0dp"
		    android:layout_weight="2"
		    android:layout_height="wrap_content"
            android:gravity="center"
			android:src="@drawable/icon_pointer2_l"
			android:paddingTop="15dp"
			android:paddingBottom="15dp"
		/>
		<TextView

			android:id="@+id/class_week_tv"
			android:text="第一周"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="3"
			android:gravity="center"
            android:textColor="@color/colorbrack_b"
            />
		<ImageView
			android:id="@+id/class_week_net"
			android:clickable="true"

			android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:src="@drawable/icon_pointer2_r"
			android:paddingTop="15dp"
			android:paddingBottom="15dp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/colorPrimary">
		<TextView
			android:background="@drawable/bg_day_table_shape"
			android:text=""
			android:layout_width="50px"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/colorbrack_6"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			style="@style/app_main_student"
			/>
		<TextView
			android:background="@drawable/bg_day_table_shape"
			android:text="星期一"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/colorbrack_6"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			style="@style/app_main_student"
			/>
		<TextView
			android:background="@drawable/bg_day_table_shape"
			android:text="星期二"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/colorbrack_6"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			style="@style/app_main_student"
			/>
		<TextView
			android:background="@drawable/bg_day_table_shape"
			android:text="星期三"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/colorbrack_6"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			style="@style/app_main_student"
			/>
		<TextView
			android:background="@drawable/bg_day_table_shape"
			android:text="星期四"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/colorbrack_6"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			style="@style/app_main_student"
			/>
		<TextView
			android:background="@drawable/bg_day_table_shape"
			android:text="星期五"
			android:layout_width="0dp"
			android:layout_weight="5"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textColor="@color/colorbrack_6"
			android:paddingTop="7dp"
			android:paddingBottom="7dp"
			style="@style/app_main_student"
			/>
	</LinearLayout>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<com.app.studyabroad.learnactivity.view.courseTableTest2Layout
			android:id="@+id/layout_course2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
		</com.app.studyabroad.learnactivity.view.courseTableTest2Layout>
	</ScrollView>


</LinearLayout>