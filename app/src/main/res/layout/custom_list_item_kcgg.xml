<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabkcgg"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/mm_listitem"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/kcggimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/msg_swtz" />

    <TextView
        android:id="@+id/kcggtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kcggimg"
        android:layout_marginLeft="16dp"
        style="@style/app_copyright"
        android:textColor="#000"
        android:layout_toRightOf="@+id/kcggimg" />

    <TextView
        android:id="@+id/kcggtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kcggtitle"
        android:layout_alignParentRight="true"
        android:textColor="#ccc"
        style="@style/app_copyright"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/kcggjsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/kcggimg"
        android:textColor="#808080"
        style="@style/app_copyright"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/kcggkcname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kcggtitle"
        android:layout_below="@+id/kcggimg"
        android:textColor="#000"
        style="@style/app_copyright"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>