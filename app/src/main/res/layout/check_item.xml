<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCheck_item"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp"
       >
       <TextView
           android:id="@+id/check_list_time_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="2019年03月到课率"
           android:textColor="@color/colorbrack_b"
           android:layout_marginLeft="5dp"
           style="@style/app_main_student"
       />
       <TextView
           android:id="@+id/check_list_daokelv_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:text="70%"
           android:textColor="@color/colorRed_fe"
           style="@style/app_main_student"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="迟到"
            android:gravity="center"
            android:textColor="@color/colorbrack"
            android:background="@color/colorBj"
            android:padding="5dp"
            android:textSize="16dp"/>
        <TextView
            android:text="请假"
            style="@style/checkTextView"
            android:textSize="16dp"
            />
        <TextView
            android:text="旷课"
            style="@style/checkTextView"
            android:textSize="16dp"/>
        <TextView
            android:text="总考勤次数"
            style="@style/checkTextView"
            android:layout_weight="3"
            android:textSize="16dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
        <TextView
            android:id="@+id/check_list_late_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="3次"
            android:gravity="center"
            android:textColor="@color/colorRed"
            android:background="@color/colorBj"
            android:padding="5dp"
            style="@style/app_student_sef"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/check_list_truancy_item"
            android:text="3次"
            android:textColor="@color/colorRed"
            style="@style/checkTextView2"

            />
        <TextView
            android:id="@+id/check_list_leveal_item"
            android:text="0次"
            android:textColor="@color/colorbrack"
            style="@style/checkTextView2"/>
        <TextView
            android:id="@+id/check_list_alls_item"
            android:text="10次"
            android:textColor="@color/colorbrack"
            android:layout_weight="3"
            style="@style/checkTextView2"/>

    </LinearLayout>
</LinearLayout>